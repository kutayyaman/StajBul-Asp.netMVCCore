@model UserProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/loginPage.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.User.UserName</h4>
                                <p class="text-secondary mb-1">Ne İş Yaptığı Bilgisi Gelecek Databasede Değişiklik Gerekebilir</p>
                                <p class="text-muted font-size-sm">Adres Bilgisi Gelecek Her Kullanıcının Bir Adresi Olcak Şekilde Düzenle Eğer Yoksa Bir Buton Ciksin Eklesin</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Website</h6>
                            <span class="text-secondary">https://bootdey.com</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Github</h6>
                            <span class="text-secondary">bootdey</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Twitter</h6>
                            <span class="text-secondary">BAKACAZ</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Instagram</h6>
                            <span class="text-secondary">bootdey</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Facebook</h6>
                            <span class="text-secondary">bootdey</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adı Ve Soyadı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.User.UserRealName @Model.User.UserSurname
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.User.Email
                            </div>
                        </div>
                        <hr>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adres Bilgisi</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                ADRES EKLENECEK DATABASEDE DEGISIKLIK GEREKEBILIR
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row gutters-sm">
                    @foreach (var announcement in Model.Announcements)
                    {
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">@announcement.Title</i>@announcement.Name</h6>
                                    <small>@announcement.Category.CategoryName</small>
                                    <small>@announcement.Address.City.CityName</small>
                                    <small>@announcement.Address.Phone</small>
                                    <div class="mt-3">
                                        <p class="text-body font-size-sm">@announcement.Explanation</p>
                                    </div>
                                    <small>@announcement.CreatedDate</small>
                                    @if (User.Identity.Name == announcement.User.UserName) { <div class="float-right"><a class="btn btn-danger btn-sm" asp-controller="Announcement" asp-action="Delete" asp-route-id="@announcement.Id"><i class="fas fa-times">Sil</i></a></div>}
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


