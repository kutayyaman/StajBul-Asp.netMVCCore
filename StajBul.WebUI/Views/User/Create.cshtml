@model User
@{
    ViewData["Title"] = "Create";
}

@section scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script>
        $(function () {
            $("input.input-validation-error").closest("form-group").addClass("has-danger"); //inputlarda input-validation-error classina sahip en yakindaki elemanlardan form-group classina sahip olana has-danger classini ekle demis olduk yani validasyondan gecemeyenleri kirmizi yapacak.
        })
    </script>
}

<div class="container">
    <h1>Üye Ol</h1>
    <hr />

    @*<div class="text-danger" asp-validation-summary="All"></div>*@

    <form class="p-1 m-1" asp-controller="User" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="UName">Adınız</label>
            <input asp-for="UName" class="form-control">
            <div><span class="text-danger" asp-validation-for="UName"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="UserSurname">Soyadınız</label>
            <input asp-for="UserSurname" class="form-control">
            <div><span class="text-danger" asp-validation-for="UserSurname"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Mail">Mail Adresiniz</label>
            <input asp-for="Mail" class="form-control">
            <div><span class="text-danger" asp-validation-for="Mail"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Pswd">Şifreniz</label>
            <input type="password" asp-for="Pswd" class="form-control">
            <div><span class="text-danger" asp-validation-for="Pswd"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Age">Yaşınız</label>
            <input asp-for="Age" class="form-control">
            <div><span class="text-danger" asp-validation-for="Age"></span></div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block mb-3">Üye Ol</button>
    </form>

</div>

