@model IEnumerable<User>
@{
    ViewData["Title"] = "List";
}

<div class="container">
    <h1>Kullanicilarin Listesi</h1>
    <hr />
    <div class="row">
        <div class="col">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>UName</th>
                            <th>UserSurname</th>
                            <th>Pswd</th>
                            <th>Age</th>
                            <th>RegistrationDate</th>
                            <th>Mail</th>
                            <th>UserType</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UName</td>
                                <td>@user.UserSurname</td>
                                <td>@user.Pswd</td>
                                <td>@user.Age</td>
                                <td>@user.CreatedDate</td>
                                <td>@user.Mail</td>
                                <td>@user.UserType</td>
                                <td>
                                    <a class="btn btn-danger btn-sm" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Kategori Eklenmemiş.
                </div>
            }

        </div>
    </div>
</div>
