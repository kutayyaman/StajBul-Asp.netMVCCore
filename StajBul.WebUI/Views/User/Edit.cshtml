@model User
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Kullanıcı Güncelle</h1>
    <hr />

    <form asp-controller="User" asp-action="EditPost" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="UName">Kullanıcı Adı</label>
            <input asp-for="UName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="UserSurname">Soyadı</label>
            <input asp-for="UserSurname" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Mail">Mail Adresi</label>
            <input asp-for="Mail" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Age">Yaşı</label>
            <input asp-for="Age" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="UserType">User Type</label>
            <select asp-for="UserType" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(UserType)))"></select>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block mb-3">Güncelle</button>
    </form>

</div>

