@model IEnumerable<IdentityRole<int>>
@{
    ViewData["Title"] = "List";
}

<div class="container">
    <h1>Rollerin Listesi</h1>
    <hr />
    <div class="row">
        <div class="col">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>RoleName</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">Güncelle</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">Sil</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Role Eklenmemiş.
                </div>
            }

        </div>
    </div>
</div>


