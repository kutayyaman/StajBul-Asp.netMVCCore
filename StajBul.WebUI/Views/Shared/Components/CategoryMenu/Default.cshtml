@model IEnumerable<StajBul.Entity.Category>

<div class="list-group">
    <a asp-controller="Home" asp-action="Index" asp-route-isIntern ="@ViewBag.isIntern"  class="list-group-item list-group-item-action @(ViewBag.categoryId == null ? "active" : "")">
        Tüm Kategorileri Gör
    </a>
    @foreach (var category in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id" asp-route-isIntern ="@ViewBag.isIntern" class="list-group-item list-group-item-action @(ViewBag.categoryId == category.Id ? "active" : "" )" >
            @category.CategoryName
        </a>
    }
</div>