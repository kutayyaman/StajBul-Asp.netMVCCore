@model Address
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Adresini Güncelle</h1>
    <hr />

    <form asp-controller="Address" asp-action="EditPost" method="post">

        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="AddressName">Adres Adı</label>
            <input asp-for="AddressName" class="form-control">
            <div><span class="text-danger" asp-validation-for="AddressName"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="CityId">Sehir Seçin</label>
            <select asp-for="CityId" class="form-control" asp-items="ViewBag.cities">
            </select>
            <div><span class="text-danger" asp-validation-for="CityId"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="District">İlçe Adı</label>
            <input asp-for="District" class="form-control">
            <div><span class="text-danger" asp-validation-for="District"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="AddressLine1">Adres Bilgileri</label>
            <textarea asp-for="AddressLine1" class="form-control" rows="6"></textarea>
            <div><span class="text-danger" asp-validation-for="AddressLine1"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="AddressLine2">Adres Bilgileri Devamini Buraya Yazabilirsiniz</label>
            <textarea asp-for="AddressLine2" class="form-control" rows="3"></textarea>
            <div><span class="text-danger" asp-validation-for="AddressLine2"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="PostalCode">Posta Kodu</label>
            <input asp-for="PostalCode" class="form-control">
            <div><span class="text-danger" asp-validation-for="PostalCode"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Telefon Numarası</label>
            <input asp-for="Phone" class="form-control">
            <div><span class="text-danger" asp-validation-for="Phone"></span></div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block mb-3">Güncelle</button>
    </form>

</div>

